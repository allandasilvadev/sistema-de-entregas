<p><%= link_to 'Voltar', carrier_path( carrier.id ) %></p>

<% if @vehicle.errors.any? %>
	<p>Verifique os erros abaixo.</p>
	<ul>
		<% @vehicle.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_with(model: @vehicle) do |f| %>
	<div class="form-group">
		<%= f.label :mockup %>
		<%= f.text_field :mockup, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :brand %>
		<%= f.text_field :brand, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :year %>
		<%= f.text_field :year, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :plate %>
		<%= f.text_field :plate, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :identification %>
		<%= f.text_field :identification, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :capacity %>
		<%= f.text_field :capacity, class: 'form-control' %>
	</div>

	<%= f.hidden_field :carrier_id, value: carrier.id %>

	<div>
		<%= f.submit 'Enviar', class: 'btn btn-success' %>
	</div>
<% end %>