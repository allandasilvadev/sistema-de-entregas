<p><%= link_to 'Voltar', carriers_path %></p>

<% if @carrier.errors.any? %>
	<p>Verifique os erros abaixo.</p>
	<ul>
		<% @carrier.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_with(model: @carrier) do |f| %>
	<div class="form-group">
	 	<%= f.label :corporate_name %><br>
	 	<%= f.text_field :corporate_name, class: 'form-control' %>
	</div>

	<div class="form-group">
	 	<%= f.label :brand_name %><br>
	 	<%= f.text_field :brand_name, class: 'form-control' %>
	</div>

	<div class="form-group">
	 	<%= f.label :registration_number %><br>
		<%= f.text_field :registration_number, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :full_address %><br>
	 	<%= f.text_area :full_address, class: 'form-control' %>
	</div>

	<div class="form-group">
	 	<%= f.label :city %><br>
	 	<%= f.text_field :city, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :state %><br>
	 	<%= f.text_field :state, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :email_domain %><br>
	 	<%= f.text_field :email_domain, class: 'form-control' %>
	</div>

	<div class="form-group">
	 	<%= f.label :activated %><br>
	 	<%= f.select(:activated, [['Activated', true], ['Deactivated', false]], { selected: true }, { :class => 'form-control' }) %>
	</div>

	<div>
	 	<p><%= f.submit 'Enviar', class: 'btn btn-success' %></p>
	</div>
<% end %>