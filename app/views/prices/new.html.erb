<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<h1>Cadastrar nova faixa de pre√ßo</h1>

			<p><%= link_to 'Voltar', carrier_path( @carrier.id ) %></p>

			<% if @price.errors.any? %>
				<p>Verifique os erros abaixo.</p>
				<ul>
					<% @price.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
					<% end %>
				</ul>
			<% end %>

			<%= form_with(model: @price) do |f| %>
				<div class="form-group">
					<%= f.label :cubic_meter_min %><br>
					<%= f.text_field :cubic_meter_min, class: 'form-control' %>
				</div>

				<div class="form-group">
					<%= f.label :cubic_meter_max %><br>
					<%= f.text_field :cubic_meter_max, class: 'form-control' %>
				</div>

				<div class="form-group">
					<%= f.label :minimum_weight %><br>
					<%= f.text_field :minimum_weight, class: 'form-control' %>
				</div>

				<div class="form-group">
					<%= f.label :maximum_weight %><br>
					<%= f.text_field :maximum_weight, class: 'form-control' %>
				</div>

				<div class="form-group">
					<%= f.label :km_price %><br>
					<%= f.text_field :km_price, class: 'form-control' %>
				</div>

				<%= f.hidden_field :carrier_id, value: @carrier.id %>

				<div>
					<%= f.submit 'Enviar', class: 'btn btn-success' %>
				</div>
			<% end %>
		</div>
	</div>
</div>