<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Cadastrar nova ordem de servi√ßo</h1>

			<p>
				<%= link_to 'Voltar', orders_all_path %>
			</p>

			<% if @order.errors.any? %>
				<p>Verifique os erros abaixo.</p>
				<ul>
					<% @order.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
					<% end %>
				</ul>
			<% end %>

			<%= form_with(model: @order) do |f| %>
			  <div class="form-group">
			  	<%= f.label :collection_address %><br>
			  	<%= f.text_field :collection_address, class: 'form-control' %>
			  </div>

			  <div class="form-group">
			  	<%= f.label :sku_product %><br>
			  	<%= f.text_field :sku_product, class: 'form-control' %>
			  </div>

			  <div class="form-group">
			  	<%= f.label :height %><br>
			  	<%= f.text_field :height, class: 'form-control' %>
			  </div>

			  <div class="form-group">
			  	<%= f.label :width %><br>
			  	<%= f.text_field :width, class: 'form-control' %>
			  </div>

			  <div class="form-group">
			  	<%= f.label :depth %><br>
			  	<%= f.text_field :depth, class: 'form-control' %>
			  </div>

			  <div class="form-group">
			  	<%= f.label :weight %><br>
			  	<%= f.text_field :weight, class: 'form-control' %>
			  </div>

			   <div class="form-group">
			  	<%= f.label :delivery_address %><br>
			  	<%= f.text_field :delivery_address, class: 'form-control' %>
			  </div>

			   <div class="form-group">
			  	<%= f.label :recipient_name %><br>
			  	<%= f.text_field :recipient_name, class: 'form-control' %>
			  </div>

			   <div class="form-group">
			  	<%= f.label :recipient_cpf %><br>
			  	<%= f.text_field :recipient_cpf, class: 'form-control' %>
			  </div>

			  <div class="form-group">
			  	<%= f.label :code %><br>
			  	<%= f.text_field :code, class: 'form-control' %>
			  </div>

			  <div class="form-group">
			  	<%= f.label :distance %><br>
			  	<%= f.text_field :distance, class: 'form-control' %>
			  </div>

			  <div>
  				<%= f.label :carrier_id, 'Transportadora' %><br>
  				<%= f.collection_select :carrier_id, @carriers, :id, :brand_name %>
  			</div>

			  <div>
			  	<%= f.submit 'Enviar', class: 'btn btn-success' %>
			  </div>
			<% end %>
		</div>
	</div>
</div>