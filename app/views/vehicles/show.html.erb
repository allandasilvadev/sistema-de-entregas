<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1>Transportadora: <small><%= @vehicle.carrier.brand_name %></small></h1>

			<p>
				<%= link_to 'Editar', edit_vehicle_path( @vehicle.id ) %> | 
				<p><%= button_to('Remover', vehicle_path( @vehicle.id, carrier_id: @vehicle.carrier.id ), method: :delete) %></p>
			</p>			

			<p>
				<%= link_to 'Voltar', vehicles_path %>
			</p>
			
			<dl>
				<dt>Modelo:</dt>
				<dd><%= @vehicle.mockup %></dd>

				<dt>Fabricante:</dt>
				<dd><%= @vehicle.brand %></dd>
				
				<dt>Ano:</dt>
				<dd><%= @vehicle.year %></dd>
				
				<dt>Placa:</dt>
				<dd><%= @vehicle.plate %></dd>
				
				<dt>Identificador:</dt>
				<dd><%= @vehicle.identification %></dd>
				
				<dt>Capacidade m√°xima:</dt>
				<dd><%= @vehicle.capacity %>kg</dd>
			</dl>
		</div>
	</div>
</div>